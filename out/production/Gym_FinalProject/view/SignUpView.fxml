<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #262626;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignUp">
   <children>
      <TextField fx:id="usernameTextField" layoutX="232.0" layoutY="119.0" prefHeight="32.0" prefWidth="158.0" promptText="Username" />
      <PasswordField fx:id="passwordTextField" layoutX="234.0" layoutY="162.0" prefHeight="32.0" prefWidth="157.0" promptText="Password" />
      <TextField fx:id="emailTextField" layoutX="233.0" layoutY="205.0" prefHeight="32.0" prefWidth="158.0" promptText="Email" />
      <TextField fx:id="telephoneTextField" layoutX="233.0" layoutY="249.0" prefHeight="32.0" prefWidth="158.0" promptText="Telephone" />
      <Button fx:id="signButton" layoutX="232.0" layoutY="298.0" mnemonicParsing="false" onAction="#onSignUpButton" prefHeight="32.0" prefWidth="158.0" style="-fx-background-color: #262626;" text="Sign Up" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB" size="22.0" />
         </font>
      </Button>
      <Button fx:id="toLoginButton" layoutX="427.0" layoutY="360.0" mnemonicParsing="false" onAction="#onToLogIn" prefHeight="32.0" prefWidth="158.0" style="-fx-background-color: #262626;" text="or press here to log in" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB" size="15.0" />
         </font>
      </Button>
      <Label layoutX="160.0" layoutY="23.0" text="Create a client account!" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB" size="33.0" />
         </font>
      </Label>
      <Label fx:id="lblMessage" layoutX="144.0" layoutY="74.0" text="Please fill all fields in order to crate an account!!" textFill="RED" visible="false">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font>
      </Label>
      <Label fx:id="userAlreadyExistsLabel" layoutX="149.0" layoutY="74.0" text="Username already taken! Choose another one!" textFill="RED" visible="false">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
