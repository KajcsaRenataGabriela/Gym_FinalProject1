<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #262626;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AddTrainer">
   <children>
      <Button fx:id="addNewTrainerButton" layoutX="210.0" layoutY="307.0" mnemonicParsing="false" onAction="#onAddNewTrainer" style="-fx-background-color: #262626;" text="Add new trainer" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB" size="22.0" />
         </font>
      </Button>
      <TextField fx:id="usernameTextField" layoutX="222.0" layoutY="108.0" prefHeight="32.0" prefWidth="156.0" promptText="Username" />
      <PasswordField fx:id="passwordTextField" layoutX="222.0" layoutY="152.0" prefHeight="32.0" prefWidth="156.0" promptText="Password" />
      <TextField fx:id="telephoneTextField" layoutX="222.0" layoutY="200.0" prefHeight="32.0" prefWidth="156.0" promptText="Telephone" />
      <Label fx:id="lblMessage" layoutX="166.0" layoutY="75.0" text="Fill all the field in order to add a new trainer!" textFill="#c20000" visible="false">
         <font>
            <Font name="Berlin Sans FB" size="15.0" />
         </font>
      </Label>
      <Label layoutX="212.0" layoutY="48.0" text="Register a trainer!" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB" size="24.0" />
         </font>
      </Label>
      <Button fx:id="backButton" layoutX="534.0" layoutY="358.0" mnemonicParsing="false" onAction="#onBack" style="-fx-background-color: #262626;" text="Back" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB" size="15.0" />
         </font>
      </Button>
      <Label fx:id="lblMessageSuccess" layoutX="184.0" layoutY="348.0" text="Trainer registered successfully!" textFill="#08c200" visible="false">
         <font>
            <Font name="Berlin Sans FB" size="19.0" />
         </font>
      </Label>
      <ChoiceBox fx:id="chooseTrainerGymHall" layoutX="287.0" layoutY="259.0" prefHeight="31.0" prefWidth="121.0" />
      <Label layoutX="193.0" layoutY="264.0" text="Gym Hall:" textFill="WHITE">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font>
      </Label>
      <Label fx:id="userAlreadyExistsLabel" layoutX="127.0" layoutY="348.0" text="Username already taken! Choose another one!" textFill="RED" visible="false">
         <font>
            <Font name="Berlin Sans FB" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
